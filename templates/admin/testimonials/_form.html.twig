{% form_theme form 'bootstrap_5_layout.html.twig' %}
{{ form_start(form) }}

<div class="row">
	<div class="col-8">

		{{ form_row(form.title) }}
		{{ form_row(form.comment, {'attr': { 'class': 'test'}}) }}
		{{ form_row(form.userName) }}

	</div>
	<div class="col-4 bg-light p-3">
		<div class="mb-3">
			<div>
				<span>Créé le :
				</span>
				{{ testimonial.createdAt|format_datetime('full', 'short', locale='fr',timezone='Europe/Paris')  }}</div>
			{# <div>
																																																																<span>Mise à jour :
																																																																</span>
																																																																{{ testimonial.updatedAt|format_datetime('full', 'short', locale='fr',timezone='Europe/Paris') }}</div> #}

			<div>
				<span>Par :
				</span>
				{{ testimonial.userName }}</div>
		</div>
		<div>
			{{ form_row(form.isPublished) }}
		</div>
	</div>
</div>


<button class="btn btn-sm btn-primary">{{ button_label|default('Enregistrer') }}</button>

{{ form_end(form) }}
{% block javascripts %}
	<script defer src="{{ asset('app.js') }}"></script>
{% endblock %}
