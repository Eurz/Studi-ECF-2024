{% extends 'base.html.twig' %}

{% block title %}Services List
{% endblock %}

{% block body %}
	<h1>My Services</h1>
	<div class="table-responsive-md">
		<table class="table table-striped table-sm table-hover">
			<thead>
				<tr>
					<th>Title</th>
					<th>Description</th>
					{# <th>CreatedAt</th> #}
					{# <th>UpdatedAt</th> #}
					<th>IsPublished</th>
					<th>Slug</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for service in services %}
					<tr>
						<td>{{ service.title }}</td>
						<td>{{ service.description }}</td>
						{# <td>{{ service.createdAt ? service.createdAt|date('Y-m-d H:i:s') : '' }}</td> #}
						{# <td>{{ service.updatedAt ? service.updatedAt|date('Y-m-d H:i:s') : '' }}</td> #}
						<td>{{ service.isPublished ? 'Publi√©' : 'Brouillon' }}</td>
						<td>{{ service.slug }}</td>
						<td>
							{# <a href="{{ path('admin_services_show', {'id': service.id}) }}">show</a> #}
							<a href="{{ path('admin_services_edit', {'slug': service.slug}) }}" class="btn btn-primary">
								<span data-feather="edit">Edit</span>
							</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="8">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

	<a href="{{ path('admin_services_new') }}" class="btn btn-primary">Create new</a>
{% endblock %}
