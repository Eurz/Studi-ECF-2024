{% extends 'base.html.twig' %}

{% block title %}Liste de services
{% endblock %}

{% block body %}
	<h1>My Services</h1>

	<div class="text-end">
		<a href="{{ path('admin_services_new') }}" class="btn btn-primary">Ajouter un service</a>
	</div>
	<div class="table-responsive-md">
		<table class="table table-striped table-sm table-hover">
			<thead>
				<tr>
					<th>Titre</th>
					<th>Résumé</th>
					{# <th>CreatedAt</th> #}
					{# <th>UpdatedAt</th> #}
					<th>Etat</th>
					<th>Slug</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for service in services %}
					<tr>
						<td>{{ service.title }}</td>
						<td>{{ service.excerpt }}</td>
						{# <td>{{ service.createdAt ? service.createdAt|date('Y-m-d H:i:s') : '' }}</td> #}
						{# <td>{{ service.updatedAt ? service.updatedAt|date('Y-m-d H:i:s') : '' }}</td> #}
						<td>{{ service.isPublished ? 'Publié' : 'Brouillon' }}</td>
						<td>{{ service.slug }}</td>

						<td>
							<a href="{{ path('admin_services_edit', {'slug': service.slug}) }}" class="btn btn-sm btn-primary">
								<span data-feather="edit">Editer</span>
							</a>
							{{ include('admin/services/_delete_form.html.twig') }}

						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="8">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
