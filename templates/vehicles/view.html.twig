{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
	<a href="{{ path('vehicles_index') }}">Retour</a>
	<h1>{{ vehicle.brandName }}
		{{ vehicle.model}}</h1>
	<div class="row">
		<div class="col"><img src="{{ asset('uploads/images/default.png') }}" class="card-img-top img-fluid" alt="{{vehicle.brandName}}"></div>
		<div class="col">
			<div>
				<div>Véhicule ajouté le{{vehicle.createdAt|date('d/m/Y', timezone="Europe/Paris") }}</div>
				<div class="d-flex">
					<div class="fw-bold w-50">Price</div>
					<div>{{ vehicle.price }}
						€ TTC</div>
				</div>
				<div class="d-flex">
					<div class="fw-bold w-50">Kilométrage</div>
					<div>{{ vehicle.mileage}}
						kms</div>
				</div>
				<div class="d-flex">
					<div class="fw-bold w-50">Année</div>
					<div>{{ vehicle.releaseDate|date('Y', timezone="Europe/Paris")}}</div>
				</div>
				<div class="d-flex">
					<div class="fw-bold w-50">Année</div>
					<div>{{ vehicle.releaseDate|date('Y', timezone="Europe/Paris")}}</div>
				</div>
				<div class="d-flex">
					<div class="fw-bold w-50">Puiss. :

					</div>
					<div>
						{{ vehicle.power }}
						kW ({{ vehicle.fiscalPower}}
						ch)
					</div>
				</div>
				<div class="d-flex">
					<div class="fw-bold w-50">Moteur :</div>
					<div>
						{{ vehicle.motorization}}
						(
						{{vehicle.engineDisplacement}}
						) cm3</div>
				</div>
				<div class="d-flex">
					<div class="fw-bold w-50">
						Conso :</div>
					<div>
						{{ vehicle.consumption}}
						l/100km</div>
				</div>
				<div class="d-flex">
					<div class="fw-bold w-50">Vitesse max. :</div>
					<div>{{vehicle.maxSpeed}}</div>
				</div>
				<div class="d-flex">
					<div class="fw-bold w-50">Portes :</div>
					<div>{{ vehicle.numberOfDoors}}
					</div>
				</div>
			</div>

		</div>
		<div class="col">
			<div class="d-flex">
				<div class="fw-bold w-50">Equipements :</div>
				<div>{{ vehicle.numberOfDoors}}
				</div>
			</div>
			<div class="d-flex">
				<div class="fw-bold w-50">Options :</div>
				<div>{{ vehicle.numberOfDoors}}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
